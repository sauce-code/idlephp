{
  "name": "idlephp/idlephp",
  "description": "This is a short description.",
  "license": "MIT",
  "require": {
    "ext-dom": "*",
    "ext-mysqli": "*",
    "kreait/firebase-php": "^7.9.1",
    "imangazaliev/didom": "^2.0.1"
  },
  "require-dev": {
    "phpunit/phpunit": "10.2.4",
    "squizlabs/php_codesniffer": "3.9.0",
    "pds/skeleton": "1.0.0"
  },
  "autoload": {
    "psr-4": {
      "Idle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Idle\\": "tests/"
    }
  },
  "scripts": {
    "pds": "vendor/bin/pds-skeleton validate",
    "phpcs": "vendor/bin/phpcs --standard=PSR2 src/",
    "phpcbf": "vendor/bin/phpcbf --standard=PSR2 src/",
    "test": "vendor/bin/phpunit tests/"
  }
}
